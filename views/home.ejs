<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>MLSA Certificates</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
            margin: 0;
            text-align: center;
            padding: 0 1rem;
        }

        h3 {
            margin-bottom: 1rem;
        }

        input {
            padding: 0.5rem;
            text-align: center;
        }

        button {
            margin-top: 1rem;
            padding: 1rem;
            background-color: #027BD4;
            border: none;
            color: white;
            font-size: 1.2rem;
            border-radius: 0.3rem;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>Practical GitHub Crash Course</h1>
    <h3>Enter College ID</h3>
    <input type="text" name="stdid" id="stdid">
    <button id="download">Download Certificate</button>


    <script>
        const btn = document.getElementById("download");
        const stdid = document.getElementById("stdid");
        btn.onclick = () => {
            const stdidval = (stdid.value.match(/[bB][0-9]{6}/g) || [null])[0];
            if (!stdidval) {
                alert("Enter a valid student ID");
                return;
            }
            window.location.href = `/certificate/${stdidval}`;
        }
    </script>
</body>

</html>